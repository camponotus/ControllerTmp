{
  "name": "FloorEditor",
  "version": "1.0.0",
  "description": "Floor LED Editor for Vibe project",
  "author": "Vibe Team",
  "main": "src/main.js",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12"
  },
  "build": {
    "appId": "com.vibe.flooreditor",
    "productName": "FloorEditor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "forceCodeSigning": false,
      "signAndEditExecutable": false
    },
    "mac": {
      "target": ["dmg"],
      "arch": ["x64", "arm64"]
    },
    "linux": {
      "target": ["AppImage"],
      "arch": ["x64"]
    }
  }
}
